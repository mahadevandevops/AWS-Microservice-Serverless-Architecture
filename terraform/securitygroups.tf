resource "aws_security_group" "ecs_s2" {
  vpc_id = aws_vpc.ecs_vpc.id

  ingress {
    from_port   = 8443
    to_port     = 8443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
