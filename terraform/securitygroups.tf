resource "aws_security_group" "ecs_s3" {
  vpc_id = aws_vpc.ecs_vpc.id

  ingress {
    from_port       = 8443
    to_port         = 8443
    protocol        = "tcp"
    security_groups = [aws_security_group.ecs_s1.id, aws_security_group.ecs_s2.id]
  }
  ingress {
    from_port       = 443
    to_port         = 443
    protocol        = "tcp"
    security_groups = [aws_security_group.ecs_s1.id, aws_security_group.ecs_s2.id]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}